            }
          }
        ],
        "responses": {
          "200": {
            "description": "Evento deletado com sucesso"
          }
        }
      }
    },
    "/api/participations": {
      "get": {
        "tags": ["Participação"],
        "summary": "Listar Participações",
        "responses": {
          "200": {
            "description": "Lista de participações",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Participation"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Participação"],
        "summary": "Criar Participação",
        "requestBody": {
